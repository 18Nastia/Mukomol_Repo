<Page x:Class="Mukomol_Praktik.Pages.AddOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      Title="AddOrderPage">
    <Grid Background="#f1cf69">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Image Source="/Image/icon-strelka.png" 
    HorizontalAlignment="Left" 
    Height="33" 
    Margin="30,40,0,0" 
    VerticalAlignment="Top" 
    Width="37"
    MouseDown="ToBack">
                </Image>
                <TextBlock Text="Создание заказа"
FontSize="30" 
FontWeight="Bold" 
Foreground="#041e56" 
HorizontalAlignment="Center" 
VerticalAlignment="Top" 
Margin="0,40,0,0"/>
                <TextBlock Text="Выберите товар" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>

                <Grid Margin="50,125,50,0" VerticalAlignment="Top" Height="150" Background="#FFFDE9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="381*"/>
                        <ColumnDefinition Width="319*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
                <TextBlock Text="Товары в заказе" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,290,0,0"/>
                <Grid Margin="50,315,50,0" VerticalAlignment="Top" Height="150" Background="#FFFDE9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="381*"/>
                        <ColumnDefinition Width="319*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
                <TextBlock Text="Укажите количество товара" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,480,0,0"/>
                <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,505,0,0"/>
                <TextBlock Text="Укажите партнера" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,530,0,0"/>
                <ComboBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Margin="0,555,0,0"/>
                <Button Content="Добавить товар" Width="130" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="0,600,300,50" Background="#041e56" Foreground="White" VerticalAlignment="Top">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Сохранить заказ" Width="130" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="0,600,0,50" Background="#041e56" Foreground="White" VerticalAlignment="Top">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Отменить" Width="130" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="300,600,0,50" Background="#041e56" Foreground="White" VerticalAlignment="Top">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
</Grid>
            </ScrollViewer>
    </Grid>
</Page>
