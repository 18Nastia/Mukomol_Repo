<Page x:Class="Mukomol_Praktik.Pages.ShipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShipmentPage">

    <Grid>
        <!-- Верхняя панель -->
        <Grid Background="#f1cf69" Height="80" VerticalAlignment="Top">

            <Image Source="/Image/logo-mukomol.png" 
           Width="50" Height="60" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Center"  
           Margin="50,0,0,0"/>

            <TextBlock Text="Партнеры" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        FontSize="16"
        Foreground="White"
        Margin="0,0,340,0"/>

            <TextBlock Text="Продукция" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        FontSize="16"
        Foreground="White"
        Margin="0,0,245,0"
        MouseDown="ToProduct"/>

            <TextBlock Text="Заказы" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        FontSize="16"
        Foreground="White"
        Margin="0,0,180,0"/>

            <TextBlock Text="Отгрузки" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        FontSize="16"
        Foreground="Gray"
        Margin="0,0,100,0"/>

            <TextBlock Text="Отчёты" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        FontSize="16"
        Foreground="White"
        Margin="0,0,30,0"
        MouseDown="ToReport"/>
        </Grid>

        <!-- Стрелка Назад -->
        <Image Source="/Image/icon-strelka.png" 
       HorizontalAlignment="Left" 
       Height="33" 
       Margin="30,120,0,0" 
       VerticalAlignment="Top" 
       Width="37"
       MouseDown="ToBack"/>


        <TextBlock Text="Отгрузки" FontSize="30" FontWeight="Bold"
                   Foreground="#041e56" HorizontalAlignment="Center"
                   Margin="0,110,0,0"/>

        <Grid Margin="50,170,50,80" Background="#FFFDE9">
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="527"/>
                    <Button Content="Поиск" Width="100" Margin="10,0,0,0"
                            Background="#041e56" Foreground="White"/>
                </StackPanel>

                <DataGrid Margin="0,20,0,0" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Клиент"/>
                        <DataGridTextColumn Header="Товар"/>
                        <DataGridTextColumn Header="Кол-во"/>
                        <DataGridTextColumn Header="Дата"/>
                        <DataGridTextColumn Header="Дата отгрузки"/>
                        <DataGridTextColumn Header="Статус"/>
                        <DataGridTextColumn Header="Комментарий"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <Button Content="Заказ отгружен" Width="160"
                Background="#041e56" Foreground="White"
                HorizontalAlignment="Left" Margin="50,0,0,30"
                VerticalAlignment="Bottom"/>

        <Button Content="Заказ не отгружен" Width="180"
                Background="#041e56" Foreground="White"
                HorizontalAlignment="Left" Margin="230,0,0,30"
                VerticalAlignment="Bottom"/>
    </Grid>
</Page>
