<Page x:Class="Mukomol_Praktik.Pages.EditCountProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCountProductPage">

    <Grid Background="#f1cf69">
        <Image Source="/Image/icon-strelka.png" 
        HorizontalAlignment="Left" 
        Height="33" 
        Margin="30,40,0,0" 
        VerticalAlignment="Top" 
        Width="37"
        MouseDown="ToBack">
        </Image>

        <Grid HorizontalAlignment="Center" 
          VerticalAlignment="Center" 
          Width="600" Height="400" 
          Margin="0,30,0,0">
            <TextBlock Text="Изменение количества товара"
FontSize="30" 
FontWeight="Bold" 
Foreground="#041e56" 
HorizontalAlignment="Center" 
VerticalAlignment="Center" 
Margin="0,0,0,370"/>
            <TextBlock Text="Укажите количество товара" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="80"/>

            <Button Content="Сохранить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="0,100,120,0" Background="#041e56" Foreground="White" VerticalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Отменить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="120,100,0,0" Background="#041e56" Foreground="White" VerticalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
