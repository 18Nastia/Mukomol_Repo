<Page x:Class="Mukomol_Praktik.Pages.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerPage">

    <Grid>
        <Grid Background="#f1cf69" Height="80" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Image Source="/Image/logo-mukomol.png" 
                   Width="50" Height="60" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"  
                   Margin="50,0,0,0"
                   MouseDown="ToMain"/>
            <TextBlock Text="Партнеры" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="Gray"
                Margin="0,0,340,0"/>
            <TextBlock Text="Продукция" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,245,0"/>
            <TextBlock Text="Заказы" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,180,0" MouseDown="ToOrder"/>
            <TextBlock Text="Отгрузки" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,100,0"/>
            <TextBlock Text="Отчёты" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,30,0"/>
        </Grid>
        
        <Image Source="/Image/icon-strelka.png" 
            HorizontalAlignment="Left" 
            Height="33" 
            Margin="30,120,0,0" 
            VerticalAlignment="Top" 
            Width="37"
            MouseDown="ToBack">
        </Image>
        <TextBlock Text="Партнёры" 
            FontSize="30" 
            FontWeight="Bold" 
            Foreground="#041e56" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,110,0,0"/>
        
        <Grid Margin="50,170,50,80" Background="#FFFDE9">

        </Grid>
        <Button Content="Добавить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Left" Margin="50,0,0,30" Background="#041e56" Foreground="White" VerticalAlignment="Bottom" Click="ToAddPartner">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Удалить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Left" Margin="150,0,0,30" Background="#041e56" Foreground="White" VerticalAlignment="Bottom" Click="ToDeletePartner">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Изменить" Width="90"  FontSize="14" Padding="7" HorizontalAlignment="Left" Margin="250,0,0,30" Background="#041e56" Foreground="White" VerticalAlignment="Bottom">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
