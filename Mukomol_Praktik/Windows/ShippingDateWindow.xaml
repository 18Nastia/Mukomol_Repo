<Window x:Class="Mukomol_Praktik.Pages.ShippingDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Выберите дату отгрузки" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FFFDE9"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Выберите дату отгрузки:" 
                   Margin="0,0,0,5"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#041e56"/>
        <DatePicker x:Name="ShippingDatePicker" SelectedDate="{x:Static sys:DateTime.Today}"
                    FontSize="14"
                    Padding="5"
                    BorderBrush="#041e56"
                    BorderThickness="1"
                    Background="White"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Margin="0,0,10,0" Click="OK_Click"
                    Background="#041e56" Foreground="White" FontWeight="Bold"
                    Padding="5" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Отмена" Width="70" Click="Cancel_Click"
                    Background="#f1cf69" Foreground="#041e56" FontWeight="Bold"
                    Padding="5" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
