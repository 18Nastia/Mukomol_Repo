<Page x:Class="Mukomol_Praktik.Pages.AddPartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPartnerPage">

    <Grid Background="#f1cf69">
        <Image Source="/Image/icon-strelka.png" 
            HorizontalAlignment="Left" 
            Height="33" 
            Margin="30,40,0,0" 
            VerticalAlignment="Top" 
            Width="37"
            MouseDown="ToBack">
        </Image>
        
        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              Width="400" Height="400" 
              Margin="0,30,0,0">
            <TextBlock Text="Добавление партнёра"
    FontSize="30" 
    FontWeight="Bold" 
    Foreground="#041e56" 
    HorizontalAlignment="Center" 
    VerticalAlignment="Center" 
    Margin="0,0,0,370"/>
            <TextBlock Text="Введите название компании партнёров" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,250"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,200" Width="200"/>
            <TextBlock Text="Загрузьте логотип" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,130"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" Width="200" Height="120"/>
            <TextBlock Text="Введите контактный номер" FontSize="16" Foreground="#041e56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,250,0,0" Width="200"/>
            <Button Content="Сохранить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="0,330,120,0" Background="#041e56" Foreground="White" VerticalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Отменить" Width="90" FontSize="14" Padding="7" HorizontalAlignment="Center" Margin="120,330,0,0" Background="#041e56" Foreground="White" VerticalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
