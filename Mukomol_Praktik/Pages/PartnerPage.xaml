<Page x:Class="Mukomol_Praktik.Pages.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mukomol_Praktik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerPage">

    <Grid x:Name="MainGrid">
        <Grid x:Name="HeaderGrid" Background="#f1cf69" Height="80" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Image x:Name="LogoImage" 
                   Source="/Image/logo-mukomol.png" 
                   Width="50" Height="60" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"  
                   Margin="50,0,0,0"
                   MouseDown="ToMain"/>
            <TextBlock x:Name="PartnersTextBlock" 
                Text="Партнеры" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="Gray"
                Margin="0,0,340,0"/>
            <TextBlock x:Name="ProductsTextBlock" 
                Text="Продукция" 
                MouseDown="ToProduct"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,245,0"/>
            <TextBlock x:Name="OrdersTextBlock" 
                Text="Заказы" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,180,0" 
                MouseDown="ToOrder"/>
            <TextBlock x:Name="ShipmentsTextBlock"
                Text="Отгрузки"
                MouseDown="ToShipment"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,100,0"/>
            <TextBlock x:Name="ReportsTextBlock" 
                Text="Отчёты" 
                MouseDown="ToReport"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Margin="0,0,30,0"/>
        </Grid>

        <Image x:Name="BackArrowImage" 
            Source="/Image/icon-strelka.png" 
            HorizontalAlignment="Left" 
            Height="33" 
            Margin="30,120,0,0" 
            VerticalAlignment="Top" 
            Width="37"
            MouseDown="ToBack">
        </Image>
        <TextBlock x:Name="PartnersTitleTextBlock" 
            Text="Партнёры" 
            FontSize="30" 
            FontWeight="Bold" 
            Foreground="#041e56" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,110,0,0"/>

        <Grid x:Name="PartnersGrid" Margin="50,170,50,80" Background="#FFFDE9">

            <DataGrid x:Name="PartnersDataGrid" 
          AutoGenerateColumns="False"
          HeadersVisibility="None"
          BorderThickness="0"
          GridLinesVisibility="None"
          Background="White"
          AlternatingRowBackground="White"
          RowBackground="#FFFDE9"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                CanUserSortColumns="False"
                SelectionMode="Single"
                      >

                <DataGrid.Columns>
                    <DataGridTemplateColumn x:Name="LogoColumn" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image x:Name="PartnerLogoImage" 
                           Source="{Binding LogoPartner}" 
                           Width="100" 
                           Height="80"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn x:Name="CompanyNameColumn" 
                            Binding="{Binding NameCompany}" 
                            Width="3*"
                            FontSize="22"
                            FontWeight="Bold" 
                            Foreground="#041e56" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn x:Name="ContactNumberColumn" 
                            Binding="{Binding ContactNumber}" 
                            Width="2*"
                            FontSize="16"
                            >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,1,0,1"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button x:Name="AddPartnerButton" 
                Content="Добавить" 
                Width="90" 
                FontSize="14" 
                Padding="7" 
                HorizontalAlignment="Left" 
                Margin="50,0,0,30" 
                Background="#041e56" 
                Foreground="White" 
                VerticalAlignment="Bottom" 
                Click="ToAddPartner">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="DeletePartnerButton" 
                Content="Удалить" 
                Width="90" 
                FontSize="14" 
                Padding="7" 
                HorizontalAlignment="Left" 
                Margin="150,0,0,30" 
                Background="#041e56" 
                Foreground="White" 
                VerticalAlignment="Bottom" 
                Click="ToDeletePartner">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="EditPartnerButton" 
                Content="Изменить" 
                Width="90"  
                FontSize="14" 
                Padding="7" 
                HorizontalAlignment="Left" 
                Margin="250,0,0,30" 
                Background="#041e56" 
                Foreground="White" 
                VerticalAlignment="Bottom" 
                Click="ToEditPartner">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>