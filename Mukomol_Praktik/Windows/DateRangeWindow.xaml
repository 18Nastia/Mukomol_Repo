<Window x:Class="Mukomol_Praktik.Windows.DateRangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор диапазона"
        MinHeight="250"
        MinWidth="400"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20">

        <TextBlock Text="Дата начала" Margin="0,0,0,5"/>
        <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10"/>

        <TextBlock Text="Дата окончания" Margin="0,0,0,5"/>
        <DatePicker x:Name="EndDatePicker" Margin="0,0,0,15"/>

        <Button Content="Применить"
                Height="30"
                Background="#041e56"
                Foreground="White"
                Click="Apply"/>
    </StackPanel>
</Window>
